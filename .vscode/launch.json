{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Module: Cli",
      "type": "debugpy",
      "request": "launch",
      "module": "backend.cli.cli"
    },
    {
      "name": "Python Debugger: Module: XBot",
      "type": "debugpy",
      "request": "launch",
      "module": "backend.xBot.x_bot"
    },
    {
      "name": "Python Debugger: Run backend.cli.cli as module",
      "type": "debugpy",
      "request": "launch",
      "module": "backend.cli.cli",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceRoot}/tgbot" }
    },
    {
      "name": "Python: Current File (with env)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": { "PYTHONPATH": "${workspaceRoot}" }
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
